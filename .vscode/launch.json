{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Go: debug backend (main)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            // Важно: целевой пакет — корень проекта, а не папка .vscode
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            // Wails требует build tag "dev" для go build/go test/dlv
            "buildFlags": [
                "-tags=dev"
            ],
            // Если delve жалуется на версию Go, можно выключить проверку
            "dlvFlags": [
                "--check-go-version=false"
            ],
            "env": {
                // Добавляем локальный Go в PATH, если системный не настроен
                "PATH": "C:\\Users\\user\\goroot\\go\\bin;C:\\Users\\user\\go\\bin;${env:PATH}",
                "GOROOT": "C:\\Users\\user\\goroot\\go",
                "GOPATH": "C:\\Users\\user\\go"
            }
        }
    ]
}